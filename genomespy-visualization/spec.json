{
  "$schema": "https://unpkg.com/@genome-spy/core/dist/schema.json",

  "genome": {
    "name": "hg38"
  },

  "specId": "Tumor evolution 2023",

  "description": "Lahtinen, A., Lavikka, K., Li, Y., et al. (2023) â€“ GenomeSpy Visualization",

  "bookmarks": {
    "remote": {
      "url": "tour.json",
      "tour": true
    }
  },

  "resolve": { "scale": { "x": "shared" } },

  "spacing": 7,

  "vconcat": [
    {
      "import": { "url": "shared/cytobands.json" }
    },

    {
      "name": "blacklist-tracks",
      "title": "Blacklist tracks",
      "spacing": 3,
      "visible": false,
      "resolve": { "scale": { "x": "shared" } },

      "vconcat": [
        { "import": { "url": "shared/hg38-blacklist.v2.json" } },
        { "import": { "url": "shared/hercules-cnv-blacklist.json" } }
      ]
    },

    {
      "import": { "url": "gistic.json" }
    },

    {
      "name": "samples",
      "title": "Evolution samples",

      "baseUrl": "data/",

      "stickySummaries": true,

      "samples": {
        "data": { "url": "samples.tsv" },
        "attributes": {
          "treatmentPhase": {
            "type": "ordinal",
            "scale": {
              "domain": ["Normal", "Diagnostic", "Interval", "Relapse"],
              "range": ["#e8e8e8", "#facf5a", "#f95959", "#455d7a"]
            }
          },
          "tissue": {
            "type": "nominal",
            "visible": false
          },
          "representative": {
            "type": "nominal",
            "scale": {
              "domain": ["FALSE", "TRUE"],
              "range": ["#e0e0e0", "#a0a0a0"]
            }
          },
          "PFI": {
            "type": "ordinal",
            "scale": {
              "domain": ["< 180 days", "180 - 364 days", ">= 365 days"],
              "scheme": "yellowgreenblue"
            }
          },
          "progression": {
            "type": "nominal",
            "scale": {
              "domain": ["FALSE", "TRUE"],
              "range": ["#e0e0e0", "#a0a0a0"]
            }
          },
          "HGSOC": {
            "type": "nominal",
            "scale": {
              "domain": ["other", "high grade serous"],
              "range": ["gray", "lightgray"]
            }
          },
          "sampleType": {
            "type": "nominal",
            "scale": {
              "scheme": "set2"
            }
          },
          "WGD": {
            "type": "nominal",
            "scale": {
              "domain": ["FALSE", "TRUE"],
              "range": ["#e0e0e0", "#a0a0a0"]
            }
          },
          "heterogeneity": {
            "type": "quantitative",
            "visible": false,
            "scale": {
              "scheme": "yellowgreenblue"
            }
          },
          "cluster": {
            "type": "nominal",
            "scale": {
              "domain": [
                "no coexistence",
                "maintaining",
                "evolving",
                "adaptive"
              ],
              "range": ["black", "#74c476", "#e6550d", "#3182bd"]
            }
          },
          "ploidy": {
            "type": "quantitative",
            "scale": {
              "scheme": "yellowgreenblue"
            }
          },
          "purity": {
            "type": "quantitative",
            "scale": {
              "domain": [0, 1],
              "scheme": "yellowgreenblue"
            }
          },
          "sig_HRD": {
            "type": "quantitative",
            "scale": {
              "scheme": "yelloworangered"
            }
          },
          "sig_APOBEC": {
            "type": "quantitative",
            "visible": false,
            "scale": {
              "scheme": "yelloworangered"
            }
          },
          "mutations": {
            "type": "quantitative",
            "scale": {
              "domain": [0, 60000],
              "scheme": "lightorange"
            }
          },
          "breaks": {
            "type": "quantitative",
            "scale": {
              "scheme": "lightorange"
            },
            "barScale": {},
            "width": 20
          }
        }
      },

      "spec": {
        "title": "Data layers",

        "data": {
          "url": "segments.tsv",
          "format": {
            "type": "tsv"
          }
        },

        "transform": [],

        "encoding": {
          "sample": { "field": "sample" },
          "x": {
            "chrom": "chr",
            "pos": "startpos",
            "type": "locus",
            "axis": null,
            "scale": {
              "name": "genome_x"
            }
          },
          "x2": {
            "chrom": "chr",
            "pos": "endpos",
            "offset": 1
          }
        },

        "resolve": {
          "scale": { "color": "independent" }
        },

        "layer": [
          {
            "title": "Copy-number variation",
            "name": "CNV",

            "configurableVisibility": true,

            "mark": {
              "type": "rect",
              "minOpacity": 1.0,
              "minWidth": 1.0
            },
            "transform": [
              {
                "type": "formula",
                "expr": "datum.endpos - datum.startpos",
                "as": "segment length"
              }
            ],
            "encoding": {
              "color": {
                "type": "quantitative",
                "field": "purifiedLogR",
                "scale": {
                  "domain": [-2.5, 0, 2.5],
                  "range": ["#0050f8", "#f6f6f6", "#ff3000"],
                  "clamp": true
                }
              }
            },

            "aggregateSamples": [
              {
                "name": "cnv-g-score-summary",
                "title": "G-score",
                "height": 50,
                "transform": [
                  {
                    "type": "filter",
                    "expr": "abs(datum.purifiedLogR) > 0.1"
                  },
                  {
                    "type": "project",
                    "fields": [
                      "sample",
                      "chr",
                      "startpos",
                      "endpos",
                      "_linearized_chr_startpos",
                      "purifiedLogR"
                    ]
                  },
                  {
                    "type": "formula",
                    "expr": "min(abs(datum.purifiedLogR), 1.5) * (datum.purifiedLogR < 0 ? -1 : 1)",
                    "as": "purifiedLogR"
                  }
                ],
                "encoding": {
                  "y": {
                    "field": "coverage",
                    "type": "quantitative",
                    "axis": {},
                    "scale": {
                      "domain": [-1.2, 0, 1.2],
                      "clamp": true
                    }
                  }
                },
                "layer": [
                  {
                    "name": "amplification",
                    "transform": [
                      { "type": "filter", "expr": "datum.purifiedLogR > 0" },
                      {
                        "type": "coverage",
                        "chrom": "chr",
                        "start": "startpos",
                        "end": "endpos",
                        "weight": "purifiedLogR"
                      },
                      {
                        "type": "formula",
                        "expr": "datum.coverage / sampleCount",
                        "as": "coverage"
                      }
                    ],
                    "mark": {
                      "type": "rect",
                      "minOpacity": 1,
                      "tooltip": null
                    },
                    "encoding": {
                      "color": { "value": "#e45756" }
                    }
                  },
                  {
                    "name": "deletion",
                    "transform": [
                      { "type": "filter", "expr": "datum.purifiedLogR < 0" },
                      {
                        "type": "coverage",
                        "chrom": "chr",
                        "start": "startpos",
                        "end": "endpos",
                        "weight": "purifiedLogR"
                      },
                      {
                        "type": "formula",
                        "expr": "datum.coverage / sampleCount",
                        "as": "coverage"
                      }
                    ],
                    "mark": {
                      "type": "rect",
                      "minOpacity": 1,
                      "tooltip": null
                    },
                    "encoding": {
                      "color": { "value": "#4c78a8" }
                    }
                  },
                  {
                    "view": {
                      "stroke": "black"
                    },
                    "data": { "values": [{}] },
                    "mark": {
                      "type": "text",
                      "text": "G-score"
                    },
                    "encoding": {
                      "y": null,
                      "facetIndex": null
                    }
                  }
                ]
              }
            ]
          },
          {
            "title": "Loss of heterozygosity",
            "name": "LOH",

            "configurableVisibility": true,

            "mark": {
              "type": "rect",
              "tooltip": null,
              "minOpacity": 0.4
            },
            "encoding": {
              "y": {
                "field": "purifiedLoh",
                "type": "quantitative",
                "axis": null,
                "scale": {
                  "domain": [0, 1],
                  "clamp": true,
                  "zoom": false
                }
              },
              "color": { "value": "black" },
              "opacity": {
                "expr": "0.10 + 0.09 * min(datum.purifiedLoh, 1)",
                "type": "quantitative",
                "scale": { "type": "identity" }
              }
            }
          },
          {
            "title": "SNPs and Indels",
            "name": "mutations",

            "configurableVisibility": true,

            "mark": {
              "type": "point",
              "stroke": "black",
              "strokeWidth": 0.8,
              "strokeOpacity": 0.65,
              "sampleFacetPadding": 0.18,
              "fillGradientStrength": 0.3,
              "semanticZoomFraction": 0.015
            },
            "data": {
              "url": [
                "EOC1002.tsv",
                "EOC1003.tsv",
                "EOC1005.tsv",
                "EOC1017.tsv",
                "EOC103.tsv",
                "EOC1030.tsv",
